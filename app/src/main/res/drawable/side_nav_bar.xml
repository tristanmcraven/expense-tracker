<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <item >
        <shape android:shape="rectangle">
            <solid android:color="#202020" />
        </shape>
    </item>

    <item android:top="-250dp" android:left="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="0.5"
                android:centerY="0"
                android:startColor="#660066"
                android:endColor="#00000000"/>
        </shape>
    </item>

    <item android:bottom="-50dp" android:right="-50dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="200dp"
                android:centerX="1"
                android:centerY="1"
                android:startColor="#994400"
                android:endColor="#00000000" />
        </shape>
    </item>

</layer-list>